<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#e7e7e7" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#d7d7d7" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <item
        android:bottom="2dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#bbbbbb" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <item
        android:bottom="0dp"
        android:left="1dp"
        android:right="1dp"
        android:id="@+id/card_top_background_expanded">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>