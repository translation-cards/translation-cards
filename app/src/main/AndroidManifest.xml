<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.mercycorps.translationcards">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MyDecksActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.translations.TranslationsActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MyDecksActivity" />
        </activity>
        <activity
            android:name=".addDeck.activity.EnterDeckTitleActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".addDeck.activity.EnterDeckSourceLanguageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".addDeck.activity.EnterDeckDestinationLanguagesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".addDeck.activity.EnterAuthorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".addDeck.activity.ReviewAndSaveDeckActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.addTranslation.GetStartedActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".addDeck.activity.GetStartedDeckActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.addTranslation.EnterSourcePhraseActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activity.addTranslation.RecordAudioActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.addTranslation.EnterTranslatedPhraseActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".activity.addTranslation.SummaryActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.ImportActivity"
            android:screenOrientation="portrait">

            <!-- To support opening from a file manager. -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\.txc"
                    android:scheme="http" />
                <data
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\.txc"
                    android:scheme="https" />
                <data
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\.txc"
                    android:scheme="ftp" />
                <data
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\.txc"
                    android:scheme="sftp" />
                <data
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\.txc"
                    android:scheme="file" />
                <data
                    android:host="*"
                    android:mimeType="*/*"
                    android:pathPattern=".*\\.txc"
                    android:scheme="content" />
            </intent-filter>
            <!--
                 To support opening downloaded files.
                 It appears that downloaded files are re-assigned numeric filenames, so we can't
                 filter by path pattern here. Also, mimetypes sometimes get lost somewhere along the
                 way, so I include application/octet-stream in addition to zip files.
            -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="*"
                    android:mimeType="application/octet-stream"
                    android:scheme="content" />
                <data
                    android:host="*"
                    android:mimeType="application/zip"
                    android:scheme="content" />
                <data
                    android:host="*"
                    android:mimeType="application/x-zip"
                    android:scheme="content" />
            </intent-filter>
            -->
        </activity>
        <activity
            android:name=".addDeck.activity.LanguageSelectorActivity"
            android:label="@string/select_language_prompt"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>