<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.TranslationsActivity"
    android:background="@color/listBackgroundColor"
    android:id="@+id/mainActivity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:fillViewport="true"
        android:id="@+id/tabScroll">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:background="@color/colorPrimary"
            android:id="@+id/tabs" />
    </HorizontalScrollView>

    <ListView
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="match_parent"
        android:divider="@color/listBackgroundColor"
        android:dividerHeight="20dp"
        android:layout_below="@+id/tabScroll"
        android:id="@+id/translations_list" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:background="#00000000"
        android:src="@drawable/main_tabbar_shadow"
        android:scaleType="fitXY"
        android:layout_below="@+id/tabScroll"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tabs_shadow" />
</RelativeLayout>