<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.mercycorps.translationcards" >

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".MainApplication">

        <activity android:name=".activity.DecksActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.TranslationsActivity"
            android:parentActivityName=".activity.DecksActivity">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.DecksActivity" />
       </activity>
        <activity android:name=".refactor.activity.GetStartedActivity" android:screenOrientation="portrait"/>
        <activity android:name=".refactor.activity.EnterSourcePhraseActivity" android:screenOrientation="portrait"/>
        <activity android:name=".refactor.activity.RecordAudioActivity" android:screenOrientation="portrait"/>
        <activity android:name=".refactor.activity.EnterTranslatedPhraseActivity" android:screenOrientation="portrait"/>
        <activity android:name=".refactor.activity.SummaryActivity" android:screenOrientation="portrait"/>

        <activity android:name=".activity.RecordingActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.DeckCreationActivity" />
        <activity android:name=".activity.ImportActivity"
            android:screenOrientation="portrait">
            <!-- To support opening from a file manager. -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="http"
                    android:host="*"
                    android:pathPattern=".*\\.txc"
                    android:mimeType="*/*" />
                <data
                    android:scheme="https"
                    android:host="*"
                    android:pathPattern=".*\\.txc"
                    android:mimeType="*/*" />
                <data
                    android:scheme="ftp"
                    android:host="*"
                    android:pathPattern=".*\\.txc"
                    android:mimeType="*/*" />
                <data
                    android:scheme="sftp"
                    android:host="*"
                    android:pathPattern=".*\\.txc"
                    android:mimeType="*/*" />
                <data
                    android:scheme="file"
                    android:host="*"
                    android:pathPattern=".*\\.txc"
                    android:mimeType="*/*" />
                <data
                    android:scheme="content"
                    android:host="*"
                    android:pathPattern=".*\\.txc"
                    android:mimeType="*/*" />
            </intent-filter>
            <!-- To support opening downloaded files.
                 It appears that downloaded files are re-assigned numeric filenames, so we can't
                 filter by path pattern here. Also, mimetypes sometimes get lost somewhere along the
                 way, so I include application/octet-stream in addition to zip files. -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data
                    android:scheme="content"
                    android:host="*"
                    android:mimeType="application/octet-stream" />
                <data
                    android:scheme="content"
                    android:host="*"
                    android:mimeType="application/zip" />
                <data
                    android:scheme="content"
                    android:host="*"
                    android:mimeType="application/x-zip" />
            </intent-filter> -->
        </activity>
    </application>
</manifest>
